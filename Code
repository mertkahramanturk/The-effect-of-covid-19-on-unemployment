import matplotlib.pyplot as plt

months = [1,2,3,4,5,6]
Grant_Application_Rate = [3968000,4126670,4254000,5152002,4965000,0]

plt.plot(months, Grant_Application_Rate)
plt.title('Grant Application Rate')
plt.xlabel('Months')
plt.ylabel('Rate')

plt.show()
